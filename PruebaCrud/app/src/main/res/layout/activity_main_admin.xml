<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/walpaper"
    android:orientation="vertical"
    tools:context=".ActivityMainAdmin">

    <TextView
        android:id="@+id/welcomw"
        android:layout_width="match_parent"

        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="BIENVENIDO"
        android:textColor="@color/colorAccent"
        android:textSize="30dp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@drawable/necesito__un__psicologo" />

    <Button
        android:id="@+id/btnRolesad"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Roles" />

    <Button
        android:id="@+id/btnNivelesad"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Ãreas" />

    <Button
        android:id="@+id/btnUsuariosad"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Usuarios" />


    <Button
        android:id="@+id/btnresultgeneral"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Resultados Generales" />

    <Button
        android:id="@+id/btnTratatmiento"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Resultados de Tratamiento" />
</LinearLayout>