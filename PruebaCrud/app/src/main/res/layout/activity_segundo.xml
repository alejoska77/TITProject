<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/psicologiafondo"
    tools:context=".SegundoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/txtSegundo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="181dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/preg2" />

        <RadioGroup
            android:id="@+id/rbgpreguntas2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioButton22"
                android:layout_width="395dp"
                android:layout_height="176dp"
                android:layout_weight="1"
                android:background="@drawable/resp1p2"
                android:baselineAligned="false" />

            <RadioButton
                android:id="@+id/radioButton23"
                android:layout_width="395dp"
                android:layout_height="163dp"
                android:layout_weight="1"
                android:background="@drawable/resp2p2" />

            <RadioButton
                android:id="@+id/radioButton24"
                android:layout_width="395dp"
                android:layout_height="158dp"
                android:layout_weight="1"
                android:background="@drawable/resp3p2" />

        </RadioGroup>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>