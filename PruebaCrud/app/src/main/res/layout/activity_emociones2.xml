<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/psicologiafondo"
tools:context=".activity_emociones2">

    <ImageView
        android:id="@+id/imgCorrectoem2"
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:layout_weight="1"
        android:src="@drawable/correcto"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.572"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imginCorrectoem2"
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:layout_weight="1"
        android:src="@drawable/incorrecto"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.572"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:layout_editor_absoluteX="0dp">


        <TextView
            android:id="@+id/welcomwem2"
            android:layout_width="match_parent"

            android:layout_height="126dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="En qué situación sentirías soledad?"
            android:textColor="@color/colorAccent"
            android:textSize="30dp"
            android:textStyle="bold|italic" />

        <ImageView
            android:id="@+id/imageViewres2p1"
            android:layout_width="286dp"
            android:layout_height="77dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="390dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/emocion3" />


        <ImageView
            android:id="@+id/imageViewres2p2"
            android:layout_width="288dp"
            android:layout_height="83dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="390dp"
            android:layout_marginBottom="90dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/emocion4" />



</LinearLayout>
</android.support.constraint.ConstraintLayout>