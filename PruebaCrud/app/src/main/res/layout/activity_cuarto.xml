<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/psicologiafondo"
    tools:context=".CuartoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/txtCuarto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/preg4" />

        <RadioGroup
            android:id="@+id/rbgpreguntas4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioButton42"
                android:layout_width="366dp"
                android:layout_height="191dp"
                android:layout_weight="1"
                android:background="@drawable/resp1p4"
                android:baselineAligned="false" />

            <RadioButton
                android:id="@+id/radioButton43"
                android:layout_width="358dp"
                android:layout_height="176dp"
                android:layout_weight="1"
                android:background="@drawable/resp2p4" />

            <RadioButton
                android:id="@+id/radioButton44"
                android:layout_width="355dp"
                android:layout_height="171dp"
                android:layout_weight="1"
                android:background="@drawable/resp3p4" />

        </RadioGroup>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>